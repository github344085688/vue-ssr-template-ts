{
  "name": "vue-ssr-template",
  "version": "1.0.0",
  "author": "B.Ma",
  "description": "A vue ssr template, use typescript, stylus and koa.",
  "private": true,
  "scripts": {
    "dev": "node server/server.dev.js",
    "build-client": "cross-env NODE_ENV=production webpack --config build/webpack.client.js",
    "build-server": "cross-env NODE_ENV=production webpack --config build/webpack.server.js",
    "server": "node server/server.prod.js",
    "start": "npm run build-client && npm run build-server && npm run server"
  },
  "dependencies": {
    "vue": "^2.5.21",
    "vue-class-component": "^6.3.2",
    "vue-router": "^3.0.2",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/webpack-env": "^1.13.6",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-vue": "^5.1.0",
    "koa": "^2.6.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-webpack": "^5.2.1",
    "memory-fs": "^0.4.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.5.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "ts-loader": "^5.3.3",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^21.0.2",
    "vue-eslint-parser": "^5.0.0",
    "vue-loader": "^15.5.1",
    "vue-server-renderer": "^2.5.21",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.2.1",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  }
}
